{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build PDF",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/Thesis"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "windows": {
        "command": "${workspaceFolder}/Scripts/build.ps1"
      },
      "linux": {
        "command": "${workspaceFolder}/Scripts/build.sh"
      },
      "osx": {
        "command": "${workspaceFolder}/Scripts/build.sh"
      },
      "promptOnClose": true,
      "problemMatcher": []
    },
    {
      "label": "Detexify source documents",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/Thesis"
      },
      "group": "none",
      "windows": {
        "command": "py"
      },
      "linux": {
        "command": "python3"
      },
      "osx": {
        "command": "python3"
      },
      "args": [
        "../Scripts/detexify.py"
      ],
      "promptOnClose": true
    }
  ]
}
